<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pedro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPedO"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/pedota" />

        <TextView
            android:id="@+id/tvNomePedro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_and"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvFrasePedro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frase_ped"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvLabelContatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/contatos"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLabelCompetencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/competencias"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvComp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>